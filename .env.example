# Root .env file - Single source of truth for all services
# All services load from this file automatically

# API Keys
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
GOOGLE_API_KEY=your-google-key-here
BRAVE_API_KEY=your-brave-key-here
NEWSDATA_API_KEY=your-newsdata-key-here

# Clerk Authentication
CLERK_SECRET_KEY=your-clerk-secret-key-here
CLERK_JWT_ISSUER=your-clerk-jwt-issuer-here

# Service Configuration
RESEARCH_SIDECAR_ENABLED=true
FEATURE_MEMORY_REVIEW_TRIGGER=true
FEATURE_RESEARCH_INJECTION=true
FEATURE_NEWSDATA_FALLBACK=true

# Redis
REDIS_URL=redis://localhost:6379

# Service Ports (optional - defaults shown)
PORT=8787
# Memory Service Port: 3001 (set in memory-service/.env if different)

# Debugging (optional)
AUTH_MOCK=0
GATEWAY_MOCK=0
LOG_LEVEL=info
NODE_ENV=development
