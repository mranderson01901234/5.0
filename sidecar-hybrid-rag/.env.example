# Hybrid RAG Sidecar Configuration

# Service
PORT=3002
NODE_ENV=development

# OpenAI API (for embeddings and query expansion)
OPENAI_API_KEY=sk-your-key-here
EMBEDDING_MODEL=text-embedding-3-small
QUERY_EXPANSION_MODEL=gpt-4o-mini

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=memories

# Redis (for pub/sub and caching)
REDIS_URL=redis://localhost:6379

# Memory Service Integration
MEMORY_SERVICE_URL=http://localhost:3001

# Agent Configuration
AGENT_MAX_HOPS=3
AGENT_MIN_CONFIDENCE=0.7
AGENT_ENABLE_MULTI_HOP=true
AGENT_ENABLE_QUERY_EXPANSION=true

# Performance
MAX_CONCURRENT_REQUESTS=50
EMBEDDING_BATCH_SIZE=50

# Cache Configuration
EMBEDDING_CACHE_TTL_SECONDS=604800
QUERY_CACHE_TTL_SECONDS=3600

# Feature Flags
FEATURE_MULTI_HOP=true
FEATURE_QUERY_EXPANSION=true
FEATURE_TEMPORAL_RETRIEVAL=true
FEATURE_GRAPH_RELATIONSHIPS=true
